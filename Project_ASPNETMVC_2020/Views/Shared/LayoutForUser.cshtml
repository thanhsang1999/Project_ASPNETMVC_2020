@using Project_ASPNETMVC_2020.Model.EF
@using Project_ASPNETMVC_2020.ClassToConfig
@using Project_ASPNETMVC_2020.Model.ModelOfSession
@{ var user = Session["User"] as UserViewModel; }
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Blue</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/web/styles/bootstrap4/bootstrap.min.css",true)">
    <link href="@Url.Content("~/Assets/web/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" ,true)" rel="stylesheet" type="text/css">
    @RenderSection("styles", required: false)

</head>

<body>

    <!-- The Modal -->
    @RenderPage("~/Views/Home/Login.cshtml")
    <div class="modal" id="myModalDK">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 dk-phan-1">
                            <span class="title-dang-ki">Đăng Kí</span>
                            <br>
                            <span class="duoi-title-dang-ki">
                                Đăng kí tài khoản để trải nghiệm được tốt nhất
                            </span>
                        </div>
                    </div>
                    <div class="row dk-phan-2">
                        <div class="row col-sm-12 gian-cach">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 bg-form-right-content">
                                <div class="input-group mb-3 gian-cach">
                                    <span class="tieu-de-input">Tài Khoản :</span>
                                    <input type="text" class="form-control" id="input-tk" required>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row col-sm-12 gian-cach">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 bg-form-right-content">
                                <div class="input-group mb-3 gian-cach">
                                    <span class="tieu-de-input">Tên :</span>
                                    <input type="text" class="form-control" id="input-name" required>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row col-sm-12 gian-cach">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 bg-form-right-content">
                                <div class="input-group mb-3 gian-cach">
                                    <span class="tieu-de-input">Email :</span>
                                    <input type="text" class="form-control" id="input-email" required>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row col-sm-12 gian-cach">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 bg-form-right-content">
                                <div class="input-group mb-3 gian-cach">
                                    <span class="tieu-de-input">Mật Khẩu :</span>
                                    <input type="password" class="form-control" id="input-mk" required>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row col-sm-12 gian-cach">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 bg-form-right-content">
                                <div class="input-group mb-3 gian-cach">
                                    <span class="tieu-de-input">Nhập Lại Mật Khẩu :</span>
                                    <input type="password" class="form-control" id="input-mk-2" required>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                    <div class="row dk-phan-3 col-sm-12">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-primary btn-block">Đăng Kí</button>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    <div class="row dk-phan-4 col-sm-12">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <span class="title-tieu-de-dang-ki"><i class="fas fa-shopping-bag"></i> Blue </span>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="super_container">
        <!-- Header -->
        <header id="header_real" class="header">
            <!-- Top Bar -->
            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            <div class="top_bar_contact_item">
                                <div class="top_bar_icon"><img src="~/Assets/web/images/phone.png" alt=""></div>+84 37509 4399
                            </div>
                            <div class="top_bar_contact_item">
                                <div class="top_bar_icon"><img src="~/Assets/web/images/mail.png" alt=""></div><a href="mailto:fastsales@gmail.com">17130190@st.hcmuaf.edu.vn</a>
                            </div>
                            <div class="top_bar_content ml-auto">
                                <div class="top_bar_menu"></div>
                            </div>
                            <div class="top_bar_user">
                                <div class="user_icon"><img src="~/Assets/web/images/user.svg" alt=""></div>
                                @if (Session["User"] != null)
                                {
                    <div><a>@user.HO_TEN</a></div>
                                    <div class="bang-thong-tin-tai-khoan">
                                        <a href="#">Thông Tin Tài Khoản</a>
                                        <a href="#">Yêu Thích</a>
                                        <a href="#">Đơn Hàng</a>
                                        <a href="@Url.Content("~/Home/Logout",true)">Đăng Xuất</a>
                                        @Ajax.ActionLink("Đăng Xuất Ver2", "LogOutVer2", new AjaxOptions()
                                        {
                                            HttpMethod = "GET",
                                            UpdateTargetId = "header_real",
                                            InsertionMode = InsertionMode.Replace
                                        }
                                                 )
                                    </div> }
                                else
                                {
                    <div><a href="#" data-toggle="modal" data-target="#myModalDK">Đăng Kí</a></div>
                                    <div><a href="#" data-toggle="modal" data-target="#myModal">Đăng Nhập</a></div>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header Main -->
            <div class="header_main">
                <div class="container">
                    <div class="row">
                        <!-- Logo -->
                        <div class="col-lg-2 col-sm-3 col-3 order-1">
                            <div class="logo_container">
                                <div class="logo"><a href="@Url.Action("Index","Home")">B l u e</a></div>
                            </div>
                        </div>
                        <!-- Search -->
                        <div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
                            <div class="header_search">
                                <div class="header_search_content">
                                    <div class="header_search_form_container">
                                        <form action="#" class="header_search_form clearfix">
                                            <div class="row">
                                                <div class="col-lg-10 col-sm-10">
                                                    <input type="search" required="required"
                                                           class="header_search_input input-search"
                                                           placeholder="Tìm Sản Phẩm...">
                                                    <div class="custom_dropdown">
                                                        <div class="custom_dropdown_list">
                                                            <span class="custom_dropdown_placeholder clc">
                                                                All
                                                                Categories
                                                            </span>
                                                            <i class="fas fa-chevron-down"></i>
                                                            <ul class="custom_list clc">
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-sm-2">
                                                    <button type="button"
                                                            class="btn btn-primary btn-search">
                                                        <span>
                                                            <i class="fas fa-search"></i>
                                                        </span>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Wishlist -->
                        <div class="col-lg-4 col-9 order-lg-3 order-2 text-lg-left text-right">
                            <div class="wishlist_cart d-flex flex-row align-items-center justify-content-end">
                                <div class="wishlist d-flex flex-row align-items-center justify-content-end">
                                    <div class="wishlist_icon"><img src="~/Assets/web/images/heart.png" alt=""></div>
                                    <div class="wishlist_content">
                                        <div class="wishlist_text"><a href="#">Yêu Thích</a></div>
                                        <div class="wishlist_count">115</div>
                                    </div>
                                </div>
                                <!-- Cart -->
                                <div class="cart">
                                    <div class="cart_container d-flex flex-row align-items-center justify-content-end">
                                        <div class="cart_icon">
                                            <img src="~/Assets/web/images/cart.png" alt="">
                                            <div class="cart_count"><span>10</span></div>
                                        </div>
                                        <div class="cart_content">
                                            <div class="cart_text"><a href="#">Giỏ Hàng</a></div>
                                            <div class="cart_price">8,500,000 đ</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="main_nav">
                @Html.Action("MainNavigation", "Header")
            </nav>
            <!-- Menu -->
        </header>
        @RenderBody()
        <!-- Newsletter -->
        <div class="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="newsletter_container d-flex flex-lg-row flex-column align-items-lg-center align-items-center justify-content-lg-start justify-content-center">
                            <div class="newsletter_title_container">
                                <div class="newsletter_icon"><img src="~/Assets/web/images/send.png" alt=""></div>
                                <div class="newsletter_title">Đăng Nhập Ngay</div>
                                <div class="newsletter_text">
                                    <p>...hoàn lại 20% giá trị đơn hàng đầu tiên.</p>
                                </div>
                            </div>
                            <div class="newsletter_content clearfix">
                                <form action="#" class="newsletter_form">
                                    <input type="email" class="newsletter_input" required="required"
                                           placeholder="Nhập Địa Chỉ Email">
                                    <button class="newsletter_button">Xác Nhận</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 footer_col">
                        <div class="footer_column footer_contact">
                            <div class="logo_container">
                                <div class="logo"><a href="#">B L U E</a></div>
                            </div>
                            <div class="footer_title">Hỗ Trợ 24/7</div>
                            <div class="footer_phone">+84 37504 4399</div>
                            <div class="footer_contact_text">
                                <p>Cư Xá F, Đại Học Nông Lâm</p>
                                <p>Thành Phố Hồ Chí Minh</p>
                            </div>
                            <div class="footer_social">
                                <ul>
                                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                                    <li><a href="#"><i class="fab fa-google"></i></a></li>
                                    <li><a href="#"><i class="fab fa-vimeo-v"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 offset-lg-2">
                        <div class="footer_column">
                            <div class="footer_title">Tìm Nhanh</div>
                            <ul class="footer_list">
                                <li><a href="#">Iphone</a></li>
                                <li><a href="#">Samsung</a></li>
                                <li><a href="#">Xiaomi</a></li>
                                <li><a href="#">Vivo</a></li>
                                <li><a href="#">Oppo</a></li>
                                <li><a href="#">Sony</a></li>
                                <li><a href="#">Nokia</a></li>
                                <li><a href="#">Huawei</a></li>
                            </ul>
                            <div class="footer_subtitle">Hệ điều hành</div>
                            <ul class="footer_list">
                                <li><a href="#">Android </a></li>
                                <li><a href="#">IOS </a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="footer_column">
                            <div class="footer_title">Tìm Nhanh</div>
                            <ul class="footer_list footer_list_2">
                                <li><a href="#">Samsung Note 10</a></li>
                                <li><a href="#">Iphone 11</a></li>
                                <li><a href="#">Iphone 11 Pro</a></li>
                                <li><a href="#">Iphone 11 Pro Max</a></li>
                                <li><a href="#">Samsung S9</a></li>
                                <li><a href="#">Samsung S9 Plus</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="footer_column">
                            <div class="footer_title">Chăm Sóc Khách Hàng</div>
                            <ul class="footer_list">
                                <li><a href="#">Tài Khoảng</a></li>
                                <li><a href="#">Giỏ Hàng</a></li>
                                <li><a href="#">Yêu Thích</a></li>
                                <li><a href="#">Chăm Sóc Khách Hàng</a></li>
                                <li><a href="#">Đổi Trả</a></li>
                                <li><a href="#">FAQs</a></li>
                                <li><a href="#">Hỗ Trợ Sản Phẩm</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Copyright -->
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="copyright_container d-flex flex-sm-row flex-column align-items-center justify-content-start">
                            <div class="copyright_content">
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>
                                    document.write(new Date().getFullYear());
                                </script> All rights reserved | Made by Blue
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </div>
                            <div class="logos ml-sm-auto">
                                <ul class="logos_list">
                                    <li><a href="#"><img src="~/Assets/web/images/logos_1.png" alt=""></a></li>
                                    <li><a href="#"><img src="~/Assets/web/images/logos_2.png" alt=""></a></li>
                                    <li><a href="#"><img src="~/Assets/web/images/logos_3.png" alt=""></a></li>
                                    <li><a href="#"><img src="~/Assets/web/images/logos_4.png" alt=""></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @Scripts.Render("~/Assets/web/styles/bootstrap4/popper.js")
    <script src="@Url.Content("~/Assets/web/styles/bootstrap4/bootstrap.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/greensock/TweenMax.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/greensock/TimelineMax.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/scrollmagic/ScrollMagic.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/greensock/animation.gsap.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/greensock/ScrollToPlugin.min.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/OwlCarousel2-2.2.1/owl.carousel.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/slick-1.8.0/slick.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/plugins/easing/easing.js",true)"></script>
    <script src="@Url.Content("~/Assets/web/js/custom.js",true)"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

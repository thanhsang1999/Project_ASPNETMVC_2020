@model System.Collections.ArrayList
@using Project_ASPNETMVC_2020.Model.EF
@using Project_ASPNETMVC_2020.Model.Code
@using Project_ASPNETMVC_2020.ClassToConfig
@{
    var listProducts = Model[0] as List<product>;
}
<!-- Hot New Arrivals -->
<div class="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="tabbed_container">
                    <div class="tabs clearfix tabs-right">
                        <div class="new_arrivals_title">Hàng Mới Về</div>
                        <ul class="clearfix">
                            <li class="active"> </li>
                        </ul>
                        <div class="tabs_line"><span></span></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12" style="z-index:1;">
                            <!-- Product Panel -->
                            <div class="product_panel panel active">
                                <div class="arrivals_slider slider">
                                    @foreach (product item in listProducts)
                                    {
                                        <!-- Slider Item -->
                                        <div class="arrivals_slider_item">
                                            <div class="border_active"></div>
                                            <div class="product_item is_new d-flex flex-column align-items-center justify-content-center text-center ">
                                                <a href="">
                                                    <div class="product_image d-flex flex-column align-items-center justify-content-center size-product-image">
                                                        <img src="@Url.ContentAssetWeb("/images/sanpham/"+@item.IMG)" alt="" width="50%"
                                                             height="100%">
                                                    </div>
                                                </a>
                                                <div class="product_content">
                                                    <div class="product_price">@Tools.StringToVND(Tools.PricesDecreased((double)item.PRICE, (double)item.SALE_RATE).ToString())</div>
                                                    <div class="product_name">
                                                        <div>
                                                            <a href="product.html">
                                                                @item.NAME
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <ul class="product_marks">
                                                    <li class="product_mark product_discount">0%</li>
                                                    <li class="product_mark product_new">new</li>
                                                </ul>
                                            </div>
                                        </div>

                                    }
                                </div>
                                <div class="arrivals_slider_dots_cover"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
